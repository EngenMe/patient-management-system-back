{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": ["jest"],
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
}
